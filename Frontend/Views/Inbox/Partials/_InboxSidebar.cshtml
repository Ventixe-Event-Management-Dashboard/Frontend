@model string // Current folder (t.ex. "inbox", "sent")

@{
    var links = new List<(string Title, string Folder)>
    {
        ("Inbox", "inbox"),
        ("Sent", "sent")
    };
}

<nav class="inbox-sidebar">
    <ul class="inbox-sidebar__list">
        @foreach (var (title, folder) in links)
        {
            var isActive = folder.Equals(Model, StringComparison.OrdinalIgnoreCase);
            <li class="inbox-sidebar__item @(isActive ? "inbox-sidebar__item--active" : "")">
                <a asp-controller="Inbox" asp-action="Index" asp-route-folder="@folder" class="inbox-sidebar__link">
                    @title
                </a>
            </li>
        }
    </ul>
</nav>




