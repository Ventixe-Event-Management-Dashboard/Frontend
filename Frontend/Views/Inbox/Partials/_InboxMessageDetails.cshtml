@model MessageItem

<div class="message-details">
    <h2>@Model.Subject</h2>

    <div class="message-meta">
        <strong>Från:</strong> @Model.Sender <br />
        <strong>Till:</strong> @Model.Receiver <br />
        <strong>Skickat:</strong> @Model.SentAt.ToString("yyyy-MM-dd HH:mm")
    </div>

    <hr />

    <div class="message-content">
        <p>@Model.Content</p>
    </div>
</div>